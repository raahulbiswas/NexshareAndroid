<resources>

        <style name="myAppTheme" parent="Theme.AppCompat.Light">
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="android:windowNoTitle">true</item>
            <item name="windowActionBar">false</item>
            <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
            <item name="android:textColorPrimary">@android:color/white</item>
            <item name="colorControlNormal">#c5c5c5</item>
            <item name="colorControlActivated">#d74b4b</item>
            <item name="colorControlHighlight">#d74b4b</item>
            <item name="circularProgressBarStyle">@style/CircularProgressBar</item>
            <item name="android:mapViewStyle">@style/mapView</item>
        </style>
    <style name="mapView">
        <item name="android:gravity">center</item>
    </style>
        <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
            <item name="spinBars">true</item>
            <item name="color">@android:color/white</item>
        </style>

</resources>
